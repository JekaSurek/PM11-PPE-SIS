<Window x:Class="УчетСИЗ.ViewModels.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УчетСИЗ.ViewModels"
        mc:Ignorable="d"
        Title="Учёт СИЗ: Окно входа" Height="200" Width="200" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Text="Пароль:"/>
            <TextBox x:Name="PasswordTextBox"/>
            <Button x:Name="ButtonLogin" Style="{StaticResource AnimatedOvalButton}" Content="Войти" Margin="30" Click="ButtonLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
